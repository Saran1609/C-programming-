#include <stdio.h>

int main() {
    int year;
    printf("Enter a year: ");
    scanf("%d", &year);

   
    if (year % 400 == 0) {
        printf("%d is a leap year.\n", year);
    }
    
    else if (year % 100 == 0) {
        printf("%d is not a leap year.\n", year);
    }
   
    else if (year % 4 == 0) {
        printf("%d is a leap year.\n", year);
    }
    
    else {
        printf("%d is not a leap year.\n", year);
    }

    return 0;
}

output 

Input: 1900

Output: 1900 is not a leap year.

Input: 2000

Output: 2000 is a leap year.

Input: 2024

Output: 2024 is a leap year.

Input: 2023

Output: 2023 is not a leap year.
