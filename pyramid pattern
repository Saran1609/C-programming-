#include <stdio.h>

int main() {
    int rows;


    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    
    for (int i = 1; i <= rows; i++) {
        // Print leading spaces
        for (int j = 1; j <= rows - i; j++) {
            printf(" ");
        }
        
        for (int k = 1; k <= (2 * i - 1); k++) {
            printf("*");
        }
        // Move to the next line after each row
        printf("\n");
    }

    return 0;
}

output 

Enter the number of rows: 5
    *
   ***
  *****
 *******
*********

